@model ShoppingList.Models.CustomerIndexViewModel
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>




@* Working old way *@
<ul>
    @foreach (var customer in Model.Customers)
    {
        <li>
            @customer.FirstName @customer.LastName
            <ul>
                @for (int i = 0; i < customer.Cart.Count; i++)
                {
                    <li>
                        @customer.Cart[i].Name @customer.Cart[i].Price
                    </li>
                }
                <li style="list-style:none">
                    Total price is
                    @{
                        var sum = 0m;
                        for (int i = 0; i < customer.Cart.Count; i++)
                        {
                            sum += customer.Cart[i].Price;
                        }
                        @Format.Currency(sum)
                    }
                </li>
            </ul>
        </li>
    }
</ul>
